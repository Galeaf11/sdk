{
  "name": "@windingtree/sdk",
  "version": "0.0.0-semantic-release",
  "description": "The WindingTree market protocol SDK",
  "repository": "git@github.com:windingtree/sdk.git",
  "author": "Kostiantyn Smyrnov <kostysh@gmail.com>",
  "contributors": [
    "Kostiantyn Smyrnov <kostysh@gmail.com>"
  ],
  "bugs": "https://github.com/windingtree/sdk/issues",
  "homepage": "https://github.com/windingtree/sdk#readme",
  "keywords": [
    "windingtree",
    "market",
    "protocol",
    "libp2p",
    "sdk",
    "typescript",
    "p2p",
    "peer",
    "peer-to-peer",
    "network"
  ],
  "license": "MIT",
  "type": "module",
  "types": "./lib/index.d.ts",
  "main": "./lib/index.js",
  "typesVersions": {
    "*": {
      "*": [
        "*",
        "lib/*",
        "lib/*/index"
      ]
    }
  },
  "files": [
    "src",
    "lib",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    },
    "./utils": {
      "types": "./lib/utils/index.d.ts",
      "import": "./lib/utils/index.js"
    }
  },
  "release": {
    "branches": [
      {
        "name": "master"
      },
      {
        "name": "beta",
        "channel": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/debug": "^4.1.8",
    "@types/luxon": "^3.3.0",
    "@types/jsonwebtoken": "^9.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "semantic-release": "^21.0.5",
    "semantic-release-cli": "^5.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "eslint": "^8.43.0",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "prettier": "^2.8.8",
    "husky": "^8.0.3",
    "git-cz": "^4.9.0",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/cli": "^17.6.5",
    "lint-staged": "^13.2.2",
    "c8": "^8.0.0",
    "typedoc": "^0.24.8",
    "dotenv": "^16.3.1",
    "vitest": "^0.32.2"
  },
  "dependencies": {
    "libp2p": "^0.45.9",
    "@chainsafe/libp2p-gossipsub": "^8.0.0",
    "@chainsafe/libp2p-noise": "^12.0.1",
    "@chainsafe/libp2p-yamux": "^4.0.2",
    "@libp2p/mplex": "^8.0.3",
    "@libp2p/websockets": "^6.0.3",
    "viem": "^1.1.4",
    "luxon": "^3.3.0",
    "h3-js": "^4.1.0",
    "debug": "^4.3.4",
    "@windingtree/contracts": "^1.0.0-beta.12",
    "@trpc/server": "^10.31.0",
    "@trpc/client": "^10.31.0",
    "jsonwebtoken": "^9.0.0",
    "zod": "^3.21.4"
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && tsc -p ./tsconfig.build.json",
    "test": "vitest --run test",
    "test:rel": "vitest related --run",
    "semantic-release": "semantic-release",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix && prettier --write .",
    "prepare": "husky install",
    "commit": "git-cz -S",
    "coverage": "c8 --all --exclude coverage --exclude lib --exclude test --exclude examples --exclude temp yarn test && c8 report -r html",
    "example:server": "node --experimental-specifier-resolution=node --loader ts-node/esm ./examples/server/index.ts",
    "example:client": "yarn --cwd ./examples/client dev",
    "example:node": "node --experimental-specifier-resolution=node --loader ts-node/esm ./examples/node/index.ts",
    "typedoc": "typedoc --options ./typedoc.json"
  }
}
